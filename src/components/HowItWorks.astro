<script>
  // Tab switching functionality
  document.addEventListener("DOMContentLoaded", () => {
    const tabButtons = document.querySelectorAll(".tab-btn");
    const tabContents = document.querySelectorAll(".tab-content");

    tabButtons.forEach((button) => {
      button.addEventListener("click", () => {
        const targetTab = button.getAttribute("data-tab");

        // Remove active class from all buttons and contents
        tabButtons.forEach((btn) => btn.classList.remove("active"));
        tabContents.forEach((content) => content.classList.remove("active"));

        // Add active class to clicked button and corresponding content
        button.classList.add("active");
        const targetContent = document.getElementById(`${targetTab}-tab`);
        if (targetContent) {
          targetContent.classList.add("active");

          // Initialize graph when timeline tab is shown
          if (targetTab === "timeline") {
            initTimelineGraph();
          }
        }
      });
    });

    // Initialize timeline graph
    function initTimelineGraph() {
      const canvas = document.getElementById("timeline-graph");
      if (!canvas) return;

      const ctx = canvas.getContext("2d");
      const container = canvas.parentElement;

      // Set canvas size
      canvas.width = container.clientWidth;
      canvas.height = container.clientHeight;

      // Node positions (relative to canvas size)
      const nodes = [
        { x: 0.15, y: 0.3 }, // Node 1
        { x: 0.35, y: 0.5 }, // Node 2
        { x: 0.5, y: 0.25 }, // Node 3
        { x: 0.65, y: 0.6 }, // Node 4
        { x: 0.85, y: 0.4 }, // Node 5
      ];

      // Connection paths with colors
      const connections = [
        { from: 0, to: 1, color: "#3b82f6", active: true },
        { from: 1, to: 2, color: "#3b82f6", active: true },
        { from: 2, to: 3, color: "#60a5fa", active: true },
        { from: 3, to: 4, color: "#93bbfd", active: false },
        { from: 0, to: 2, color: "#3b82f6", active: true }, // Cross connection
      ];

      // Animation variables
      let animationFrame = 0;

      function drawGraph() {
        ctx.clearRect(0, 0, canvas.width, canvas.height);

        // Draw connections
        connections.forEach((conn, index) => {
          const from = nodes[conn.from];
          const to = nodes[conn.to];

          const x1 = from.x * canvas.width;
          const y1 = from.y * canvas.height;
          const x2 = to.x * canvas.width;
          const y2 = to.y * canvas.height;

          // Gradient for active connections
          const gradient = ctx.createLinearGradient(x1, y1, x2, y2);

          if (conn.active) {
            const pulseOffset = ((animationFrame + index * 20) % 100) / 100;
            gradient.addColorStop(0, conn.color + "80");
            gradient.addColorStop(pulseOffset, conn.color);
            gradient.addColorStop(1, conn.color + "40");
          } else {
            gradient.addColorStop(0, conn.color + "20");
            gradient.addColorStop(1, conn.color + "20");
          }

          ctx.strokeStyle = gradient;
          ctx.lineWidth = conn.active ? 3 : 1.5;
          ctx.shadowBlur = conn.active ? 15 : 5;
          ctx.shadowColor = conn.color;

          // Draw curved line
          const cp1x = x1 + (x2 - x1) * 0.5;
          const cp1y = y1 - 50;
          const cp2x = x1 + (x2 - x1) * 0.5;
          const cp2y = y2 + 50;

          ctx.beginPath();
          ctx.moveTo(x1, y1);
          ctx.bezierCurveTo(cp1x, cp1y, cp2x, cp2y, x2, y2);
          ctx.stroke();

          // Draw animated particles on active connections
          if (conn.active) {
            const t = ((animationFrame * 2 + index * 30) % 100) / 100;
            const px =
              Math.pow(1 - t, 3) * x1 +
              3 * Math.pow(1 - t, 2) * t * cp1x +
              3 * (1 - t) * Math.pow(t, 2) * cp2x +
              Math.pow(t, 3) * x2;
            const py =
              Math.pow(1 - t, 3) * y1 +
              3 * Math.pow(1 - t, 2) * t * cp1y +
              3 * (1 - t) * Math.pow(t, 2) * cp2y +
              Math.pow(t, 3) * y2;

            ctx.beginPath();
            ctx.arc(px, py, 4, 0, Math.PI * 2);
            ctx.fillStyle = conn.color;
            ctx.shadowBlur = 20;
            ctx.fill();
          }
        });

        ctx.shadowBlur = 0;

        animationFrame++;
        requestAnimationFrame(drawGraph);
      }

      drawGraph();

      // Resize handler
      window.addEventListener("resize", () => {
        canvas.width = container.clientWidth;
        canvas.height = container.clientHeight;
      });
    }
  });
</script>

