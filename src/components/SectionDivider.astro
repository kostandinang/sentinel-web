<div class="section-divider">
  <div class="divider-line"></div>
  <div class="divider-glow"></div>
</div>

<style>
  .section-divider {
    position: relative;
    width: 100%;
    height: 120px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .divider-line {
    position: relative;
    width: 100%;
    max-width: 1200px;
    height: 2px;
    background: linear-gradient(
      90deg,
      transparent 0%,
      rgba(59, 130, 246, 0.1) 10%,
      rgba(59, 130, 246, 0.3) 30%,
      rgba(96, 165, 250, 0.5) 50%,
      rgba(59, 130, 246, 0.3) 70%,
      rgba(59, 130, 246, 0.1) 90%,
      transparent 100%
    );
    box-shadow:
      0 0 10px rgba(59, 130, 246, 0.2),
      0 0 20px rgba(59, 130, 246, 0.1);
  }

  .divider-line::before {
    content: '';
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    width: 12px;
    height: 12px;
    background: linear-gradient(135deg, #60a5fa, #3b82f6);
    border-radius: 50%;
    box-shadow:
      0 0 15px rgba(59, 130, 246, 0.6),
      0 0 30px rgba(96, 165, 250, 0.4),
      inset 0 0 5px rgba(255, 255, 255, 0.5);
    animation: dividerPulse 3s ease-in-out infinite;
  }

  .divider-line::after {
    content: '';
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    width: 24px;
    height: 24px;
    border: 2px solid rgba(59, 130, 246, 0.4);
    border-radius: 50%;
    animation: dividerRing 3s ease-in-out infinite;
  }

  .divider-glow {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    width: 300px;
    height: 100px;
    background: radial-gradient(
      ellipse at center,
      rgba(59, 130, 246, 0.15) 0%,
      rgba(96, 165, 250, 0.08) 30%,
      transparent 70%
    );
    animation: dividerGlow 4s ease-in-out infinite;
    pointer-events: none;
  }

  @keyframes dividerPulse {
    0%, 100% {
      transform: translate(-50%, -50%) scale(1);
      box-shadow:
        0 0 15px rgba(59, 130, 246, 0.6),
        0 0 30px rgba(96, 165, 250, 0.4),
        inset 0 0 5px rgba(255, 255, 255, 0.5);
    }
    50% {
      transform: translate(-50%, -50%) scale(1.2);
      box-shadow:
        0 0 20px rgba(96, 165, 250, 0.8),
        0 0 40px rgba(59, 130, 246, 0.5),
        inset 0 0 8px rgba(255, 255, 255, 0.6);
    }
  }

  @keyframes dividerRing {
    0%, 100% {
      transform: translate(-50%, -50%) scale(1);
      opacity: 1;
    }
    50% {
      transform: translate(-50%, -50%) scale(1.5);
      opacity: 0.3;
    }
  }

  @keyframes dividerGlow {
    0%, 100% {
      opacity: 0.6;
    }
    50% {
      opacity: 1;
    }
  }

  /* Responsive */
  @media (max-width: 768px) {
    .section-divider {
      height: 80px;
    }

    .divider-glow {
      width: 200px;
      height: 60px;
    }
  }
</style>
