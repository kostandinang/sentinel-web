        <div class="text-neutral-400 text-sm leading-relaxed">
          Claude, Gemini, Warp and many agents in one place
        </div>
      </div>
      <div
        class="feature-card feature-orange group p-6 rounded-lg bg-neutral-900/50 backdrop-blur-sm border border-neutral-800 transition-all duration-300"
      >
        <div class="feature-icon feature-icon-orange mb-4">
          <svg
            class="w-8 h-8 icon-sync"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0l3.181 3.183a8.25 8.25 0 0013.803-3.7M4.031 9.865a8.25 8.25 0 0113.803-3.7l3.181 3.182m0-4.991v4.99"
            ></path>
          </svg>
          <div class="icon-glow glow-orange"></div>
        </div>
        <div class="feature-title text-orange-400 font-bold text-lg mb-2 mt-4">
          Live Status
        </div>
        <div class="text-neutral-400 text-sm leading-relaxed">
          Real-time updates as your agents think and work
        </div>
      </div>
      <div
        class="feature-card feature-green group p-6 rounded-lg bg-neutral-900/50 backdrop-blur-sm border border-neutral-800 transition-all duration-300"
      >
        <div class="feature-icon feature-icon-green mb-4">
          <svg
            class="w-8 h-8 icon-bell"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M14.857 17.082a23.848 23.848 0 005.454-1.31A8.967 8.967 0 0118 9.75v-.7V9A6 6 0 006 9v.75a8.967 8.967 0 01-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 01-5.714 0m5.714 0a3 3 0 11-5.714 0"
            ></path>
          </svg>
          <div class="icon-glow glow-green"></div>
        </div>
        <div class="feature-title text-green-400 font-bold text-lg mb-2 mt-4">
          Smart Alerts
        </div>
        <div class="text-neutral-400 text-sm leading-relaxed">
          Get notified when something needs your attention
        </div>
      </div>
      <div
        class="feature-card feature-violet group p-6 rounded-lg bg-neutral-900/50 backdrop-blur-sm border border-neutral-800 transition-all duration-300"
      >
        <div class="feature-icon feature-icon-violet mb-4">
          <svg
            class="w-8 h-8 icon-code"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M17.25 6.75L22.5 12l-5.25 5.25m-10.5 0L1.5 12l5.25-5.25m7.5-3l-4.5 16.5"
            ></path>
          </svg>
          <div class="icon-glow glow-violet"></div>
        </div>
        <div class="feature-title text-violet-400 font-bold text-lg mb-2 mt-4">
          100% Free
        </div>
        <div class="text-neutral-400 text-sm leading-relaxed">
          Open source on GitHub. No paywalls, ever
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 scroll-indicator">
    <div
      class="w-6 h-10 border-2 border-neutral-700 rounded-full flex items-start justify-center p-2"
    >
      <div class="w-1 h-2 bg-primary-500 rounded-full animate-bounce"></div>
    </div>
  </div>
</section>

<script>
  // Enhanced hero animations with mouse tracking and parallax
  document.addEventListener("DOMContentLoaded", () => {
    const heroSection = document.querySelector(".hero-title") as HTMLElement;
    const featureCards = document.querySelectorAll(
      ".feature-card"
    ) as NodeListOf<HTMLElement>;
    const badge = document.querySelector(".inline-flex") as HTMLElement;
    const ctaButtons = document.querySelectorAll(
      ".primary-cta, .secondary-cta"
    ) as NodeListOf<HTMLElement>;

    // Mouse tracking for parallax effect
    let mouseX = 0;
    let mouseY = 0;
    let currentX = 0;
    let currentY = 0;

    document.addEventListener("mousemove", (e) => {
      mouseX = (e.clientX / window.innerWidth - 0.5) * 2;
      mouseY = (e.clientY / window.innerHeight - 0.5) * 2;
    });

    // Smooth animation loop
    function animate() {
      currentX += (mouseX - currentX) * 0.05;
      currentY += (mouseY - currentY) * 0.05;

      // Apply parallax to hero title
      if (heroSection) {
        heroSection.style.transform = `translate(${currentX * 15}px, ${currentY * 15}px)`;
      }

      // Apply subtle parallax to badge
      if (badge) {
        badge.style.transform = `translate(${currentX * 8}px, ${currentY * 8}px)`;
      }

      // Apply counter parallax to feature cards
      featureCards.forEach((card, index) => {
        const depth = (index + 1) * 3;
        card.style.transform = `translate(${-currentX * depth}px, ${-currentY * depth}px)`;
      });

      requestAnimationFrame(animate);
    }
    animate();

    // Enhanced hover effects for feature cards
    featureCards.forEach((card) => {
      card.addEventListener("mouseenter", function (e) {
        this.style.transition =
          "transform 0.3s cubic-bezier(0.34, 1.56, 0.64, 1)";
      });

      card.addEventListener("mousemove", function (e) {
        const rect = this.getBoundingClientRect();
        const x = e.clientX - rect.left;
        const y = e.clientY - rect.top;
        const centerX = rect.width / 2;
        const centerY = rect.height / 2;
        const rotateX = (y - centerY) / 10;
        const rotateY = (centerX - x) / 10;

        this.style.transform = `
          translate(${-currentX * ((featureCards.length - Array.from(featureCards).indexOf(this)) * 3)}px, ${-currentY * ((featureCards.length - Array.from(featureCards).indexOf(this)) * 3)}px)
          perspective(1000px) 
          rotateX(${rotateX}deg) 
          rotateY(${rotateY}deg) 
          translateZ(20px)
        `;
      });

      card.addEventListener("mouseleave", function () {
        this.style.transition = "transform 0.5s ease";
        const index = Array.from(featureCards).indexOf(this);
        this.style.transform = `translate(${-currentX * ((featureCards.length - index) * 3)}px, ${-currentY * ((featureCards.length - index) * 3)}px)`;
      });
    });

    // Add subtle magnetic effect to CTA buttons
    ctaButtons.forEach((button) => {
      button.addEventListener("mousemove", function (e) {
        const rect = this.getBoundingClientRect();
        const x = e.clientX - rect.left - rect.width / 2;
        const y = e.clientY - rect.top - rect.height / 2;

        // Much smaller movement for smoother effect
        this.style.transform = `translate(${x * 0.05}px, ${y * 0.05}px) translateY(-2px)`;
      });

      button.addEventListener("mouseleave", function () {
        this.style.transform = "";
      });
    });

    // Scroll-based animations
    let lastScroll = 0;
    window.addEventListener("scroll", () => {
      const scrolled = window.pageYOffset;
      const heroElements = document.querySelector(
        ".relative.max-w-6xl"
      ) as HTMLElement;

      if (heroElements) {
        const opacity = 1 - scrolled / 500;
        const scale = 1 - scrolled / 2000;
        heroElements.style.opacity = Math.max(0, opacity).toString();
        heroElements.style.transform = `scale(${Math.max(0.9, scale)})`;
      }

      lastScroll = scrolled;
    });

    // Add floating particles
    createFloatingParticles();
  });

  function createFloatingParticles() {
    const heroSection = document.querySelector(
      "section.relative.min-h-screen"
    ) as HTMLElement;
    if (!heroSection) return;

    for (let i = 0; i < 20; i++) {
      const particle = document.createElement("div");
      particle.className = "floating-particle";
      particle.style.cssText = `
        position: absolute;
        width: ${Math.random() * 4 + 2}px;
        height: ${Math.random() * 4 + 2}px;
        background: radial-gradient(circle, rgba(59, 130, 246, ${Math.random() * 0.5 + 0.3}), transparent);
        border-radius: 50%;
        left: ${Math.random() * 100}%;
        top: ${Math.random() * 100}%;
        pointer-events: none;
        z-index: 1;
        animation: float ${Math.random() * 10 + 10}s ease-in-out infinite;
        animation-delay: ${Math.random() * 5}s;
        filter: blur(1px);
      `;
      heroSection.appendChild(particle);
    }
  }
</script>

<style>
  .hero-title {
    position: relative;
    z-index: 20;
  }

  .hero-description {
    position: relative;
    z-index: 20;
    color: rgba(255, 255, 255, 0.95);
    font-weight: 500;
    line-height: 1.6;
    background: linear-gradient(
      135deg,
      rgba(15, 23, 42, 0.95) 0%,
      rgba(30, 41, 59, 0.92) 50%,
      rgba(15, 23, 42, 0.95) 100%
    );
    backdrop-filter: blur(20px) saturate(180%);
    -webkit-backdrop-filter: blur(20px) saturate(180%);
    border-radius: 24px;
    padding: 32px 40px;
    border: 1px solid rgba(255, 255, 255, 0.15);
    box-shadow:
      0 20px 40px rgba(0, 0, 0, 0.3),
      0 8px 16px rgba(0, 0, 0, 0.2),
      inset 0 1px 0 rgba(255, 255, 255, 0.2),
      inset 0 -1px 0 rgba(0, 0, 0, 0.1);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    transform: translateZ(0);
    isolation: isolate;
  }

  .hero-description-container {
    position: relative;
    z-index: 20;
  }

  /* Enhanced CTA Buttons */
  .cta-buttons {
    position: relative;
    z-index: 20;
  }

  .primary-cta,
  .secondary-cta {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 16px 32px;
    border-radius: 16px;
    font-weight: 700;
    font-size: 1.125rem;
    text-decoration: none;
    transition: all 0.5s cubic-bezier(0.23, 1, 0.32, 1);
    transform: translateZ(0);
    min-width: 200px;
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    will-change: transform;
  }

  .primary-cta {
    background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 50%, #1e40af 100%);
    border: 2px solid rgba(59, 130, 246, 0.5);
    color: white;
    box-shadow:
      0 20px 40px rgba(59, 130, 246, 0.3),
      0 8px 16px rgba(0, 0, 0, 0.2),
      inset 0 1px 0 rgba(255, 255, 255, 0.3),
      inset 0 -1px 0 rgba(0, 0, 0, 0.1);
  }

  .primary-cta:hover {
    box-shadow:
      0 25px 50px rgba(59, 130, 246, 0.4),
      0 10px 20px rgba(0, 0, 0, 0.3),
      inset 0 1px 0 rgba(255, 255, 255, 0.4),
      inset 0 -1px 0 rgba(0, 0, 0, 0.1);
    border-color: rgba(59, 130, 246, 0.8);
  }

  .secondary-cta {
    background: linear-gradient(
      135deg,
      rgba(30, 41, 59, 0.9) 0%,
      rgba(51, 65, 85, 0.85) 50%,
      rgba(30, 41, 59, 0.9) 100%
    );
    border: 2px solid rgba(255, 255, 255, 0.2);
    color: rgba(255, 255, 255, 0.95);
    box-shadow:
      0 15px 30px rgba(0, 0, 0, 0.2),
      inset 0 1px 0 rgba(255, 255, 255, 0.2),
      inset 0 -1px 0 rgba(0, 0, 0, 0.1);
  }

  .secondary-cta:hover {
    background: linear-gradient(
      135deg,
      rgba(51, 65, 85, 0.95) 0%,
      rgba(71, 85, 105, 0.9) 50%,
      rgba(51, 65, 85, 0.95) 100%
    );
    border-color: rgba(255, 255, 255, 0.3);
    box-shadow:
      0 20px 40px rgba(0, 0, 0, 0.3),
      inset 0 1px 0 rgba(255, 255, 255, 0.3),
      inset 0 -1px 0 rgba(0, 0, 0, 0.1);
  }

  .cta-content {
    position: relative;
    z-index: 2;
    display: flex;
    align-items: center;
    gap: 12px;
    transition: transform 0.4s ease;
  }

  .primary-cta:hover .cta-content {
    transform: scale(1.01);
  }

  .secondary-cta:hover .cta-content {
    transform: scale(1.005);
  }

  .cta-text {
    font-weight: 700;
    letter-spacing: 0.025em;
  }

  .cta-glow {
    position: absolute;
    inset: -2px;
    background: linear-gradient(
      135deg,
      rgba(59, 130, 246, 0.4) 0%,
      rgba(29, 78, 216, 0.3) 50%,
      rgba(30, 64, 175, 0.4) 100%
    );
    border-radius: inherit;
    z-index: -1;
    opacity: 0;
    filter: blur(8px);
    transition: opacity 0.3s ease;
  }

  .primary-cta:hover .cta-glow {
    opacity: 1;
  }

  .cta-border {
    position: absolute;
    inset: 0;
    border-radius: inherit;
    z-index: 1;
    background: linear-gradient(
      135deg,
      rgba(255, 255, 255, 0.1) 0%,
      transparent 50%,
      rgba(255, 255, 255, 0.05) 100%
    );
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .secondary-cta:hover .cta-border {
    opacity: 1;
  }

  /* Icon animations */
  .primary-cta svg,
  .secondary-cta svg {
    transition: transform 0.4s ease;
  }

  .primary-cta:hover svg {
    transform: rotate(3deg) scale(1.05);
  }

  .secondary-cta:hover svg {
    transform: translateX(1px);
  }

  .agent-steps-3d {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 32px;
    perspective: 1000px;
    transform-style: preserve-3d;
    padding: 24px 0;
  }

  .step-card {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 12px;
    padding: 28px 20px;
    background: linear-gradient(
      145deg,
      rgba(30, 41, 59, 0.95) 0%,
      rgba(51, 65, 85, 0.9) 50%,
      rgba(30, 41, 59, 0.95) 100%
    );
    backdrop-filter: blur(16px) saturate(180%);
    -webkit-backdrop-filter: blur(16px) saturate(180%);
    border-radius: 16px;
    border: 1px solid rgba(255, 255, 255, 0.2);
    box-shadow:
      0 15px 35px rgba(0, 0, 0, 0.3),
      0 5px 15px rgba(0, 0, 0, 0.2),
      inset 0 1px 0 rgba(255, 255, 255, 0.25),
      inset 0 -1px 0 rgba(0, 0, 0, 0.1);
    transform: translateZ(0) rotateY(0deg);
    transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1);
    min-width: 140px;
    animation: stepFloat 6s ease-in-out infinite;
  }

  .step-card:hover {
    transform: translateZ(20px) rotateY(-5deg) translateY(-5px);
    box-shadow:
      0 25px 50px rgba(0, 0, 0, 0.4),
      0 10px 25px rgba(0, 0, 0, 0.3),
      inset 0 1px 0 rgba(255, 255, 255, 0.3),
      inset 0 -1px 0 rgba(0, 0, 0, 0.1);
    border-color: rgba(59, 130, 246, 0.3);
  }

  .step-1 {
    animation-delay: 0s;
  }

  .step-2 {
    animation-delay: 2s;
    transform: translateZ(10px);
  }

  .step-3 {
    animation-delay: 4s;
  }

  /* Color-coded step numbers */
  .step-number {
    position: absolute;
    top: -8px;
    right: -8px;
    width: 24px;
    height: 24px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 12px;
    font-weight: 700;
    color: white;
    border: 2px solid rgba(255, 255, 255, 0.2);
    animation: numberPulse 2s ease-in-out infinite;
  }

  .step-number-blue {
    background: linear-gradient(135deg, #3b82f6, #1d4ed8);
    box-shadow:
      0 4px 12px rgba(59, 130, 246, 0.6),
      inset 0 1px 0 rgba(255, 255, 255, 0.3);
  }

  .step-number-orange {
    background: linear-gradient(135deg, #f97316, #ea580c);
    box-shadow:
      0 4px 12px rgba(249, 115, 22, 0.6),
      inset 0 1px 0 rgba(255, 255, 255, 0.3);
  }

  .step-number-green {
    background: linear-gradient(135deg, #10b981, #059669);
    box-shadow:
      0 4px 12px rgba(16, 185, 129, 0.6),
      inset 0 1px 0 rgba(255, 255, 255, 0.3);
  }

  /* Icon wrapper for pulse effects */
  .step-icon-wrapper {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .step-icon {
    font-size: 2.5rem;
    transform: translateZ(5px);
    transition: transform 0.3s ease;
    position: relative;
    z-index: 2;
    animation: iconBounce 3s ease-in-out infinite;
  }

  .step-icon-blue {
    filter: drop-shadow(0 4px 12px rgba(59, 130, 246, 0.6));
  }

  .step-icon-orange {
    filter: drop-shadow(0 4px 12px rgba(249, 115, 22, 0.6));
  }

  .step-icon-green {
    filter: drop-shadow(0 4px 12px rgba(16, 185, 129, 0.6));
  }

  .step-card:hover .step-icon {
    transform: translateZ(10px) scale(1.2) rotate(5deg);
    animation: iconShake 0.5s ease-in-out;
  }

  /* Animated pulse rings */
  .icon-pulse {
    position: absolute;
    inset: -12px;
    border-radius: 50%;
    border: 2px solid;
    opacity: 0.6;
    animation: pulseRing 2s ease-out infinite;
  }

  .pulse-blue {
    border-color: rgba(59, 130, 246, 0.8);
  }

