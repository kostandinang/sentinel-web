        <div class="cta-border"></div>
      </a>
    </div>

    <!-- Feature highlights -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 max-w-5xl mx-auto">
      <div
        class="feature-card feature-blue group p-6 rounded-lg bg-neutral-900/50 backdrop-blur-sm border border-neutral-800 transition-all duration-300"
      >
        <div class="feature-icon feature-icon-blue mb-4">
          <svg
            class="w-8 h-8 icon-dashboard"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            viewBox="0 0 24 24"
          >
