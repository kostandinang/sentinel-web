---
import AnimatedBackground from "./AnimatedBackground.astro";
---

<section
  class="relative min-h-screen flex items-center justify-center px-4 py-20 overflow-hidden"
>
  <!-- Animated Background -->
  <AnimatedBackground />

  <!-- Background gradient overlay -->
  <div
    class="absolute inset-0 bg-gradient-to-b from-neutral-950/30 via-neutral-950/60 to-neutral-950"
  >
  </div>

  <div class="relative max-w-6xl mx-auto text-center z-10">
    <!-- Badge -->
    <div
      class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-primary-500/10 border border-primary-500/20 mb-12 backdrop-blur-sm"
    >
      <span class="w-2 h-2 rounded-full bg-primary-500 animate-pulse"></span>
      <span class="text-sm text-primary-400 font-medium">macOS 13+</span>
    </div>

    <!-- Main heading -->
    <h1
      class="hero-title text-5xl md:text-7xl font-bold mb-16 leading-tight relative"
    >
      <span class="hero-text">You can rest,</span><br />
      <span class="hero-text-with-badge">
        <span class="hero-text">but Sentinel</span>
        <span class="hero-beta-badge">BETA</span>
        <span class="hero-text"> won't</span>
      </span>
    </h1>

    <!-- 3D Agent Steps Only -->
    <div class="hero-description-container mb-48 mt-0 min-h-48 mx-auto">
      <span class="text-xl md:text-xl text-neutral-300 max-w-3xl mx">
        The macOs menu bar app to watch your AI agents
      </span>
    </div>

    <!-- Enhanced CTA buttons -->
    <div
      class="cta-buttons flex flex-col sm:flex-row gap-6 justify-center mb-24"
    >
      <a
        href="https://github.com/kostandinang/sentinel"
        target="_blank"
        class="primary-cta group relative overflow-hidden"
      >
